[Unit]
Description=VK Bot for АТ СЕРВИС
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/bot-vk-mikle6676
Environment="PYTHONIOENCODING=utf-8"
ExecStart=/opt/bot-vk-mikle6676/venv/bin/python3 /opt/bot-vk-mikle6676/bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
